
<% if notice %>
   <p id="notice"><%= notice %></p>
<% end %>
 
<h1>Danh sách sản phẩm</h1>
 
<% @sanphams.each do |sanpham| %>
    <div class="entry">
        <%= link_to detail_path(id: sanpham.id) do%>
        <%= image_tag(sanpham.anh) %>
        <%end%>
        <h3><%= sanpham.tieude %></h3> 
        <dd><%= truncate(strip_tags(sanpham.noidung),
                            :length => 300) %></dd>
        <div class="price_line">
            <span class="price"><%= number_to_currency(sanpham.gia, precision: 0, :unit => "vnđ", delimiter: ',', format: "%n%u") %></span>
            <%= button_to 'Thêm vào giỏ hàng', line_items_path(:sanpham_id => sanpham) %>
        </div>
    </div>
<% end %>
<%== pagy_bootstrap_nav(@pagy).html_safe %>